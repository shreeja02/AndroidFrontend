<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.androidfrontend.QuestionIdActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question-Answer Review"
        android:paddingLeft="23dp"
        android:textSize="30dp"
        android:paddingTop="7dp"
        android:textColor="@color/primary_dark"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/primary_text"
            android:paddingLeft="5dp"
            android:textSize="25dp"/>

         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:textColor="@color/secondary_text"
             android:paddingLeft="5dp"
            android:id="@+id/tvquesidactivityname" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textColor="@color/primary_text"
            android:paddingLeft="5dp"
            android:textSize="25dp" />

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:paddingLeft="5dp"
           android:textColor="@color/secondary_text"
            android:id="@+id/tvquesidactivitydate"/>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question Title:"
            android:textColor="@color/primary_text"
            android:paddingLeft="5dp"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/secondary_text"
            android:id="@+id/tvquesidactivitytitle"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="@color/primary_text"
            android:paddingLeft="5dp"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/secondary_text"
            android:id="@+id/tvquesidactivitydescription"/>

    </LinearLayout>


