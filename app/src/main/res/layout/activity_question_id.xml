<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.androidfrontend.QuestionIdActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question-Answer Review"
        android:paddingLeft="15dp"
        android:textSize="30dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:text="Name:"
            android:textSize="25dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvquesidactivityname"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:text="Date:"
            android:textSize="25dp"/>

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvquesidactivitydate"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:text="Question Title:"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvquesidactivitytitle"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:text="Description:"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvquesidactivitydescription"/>

    </LinearLayout>

</LinearLayout>
